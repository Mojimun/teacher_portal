<style>

.container {
    justify-content: center;
    align-items: center;
    height: auto;
    width: 350px;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    border-radius: 5px;
    margin: 10% auto;
  }

</style>

<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Enter your email", required: true%>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", required: true%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field" style="display: flex;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, style: "margin: 4px 0 0 10px;" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-success" %>
    </div><br />
  <% end %>
</div>
